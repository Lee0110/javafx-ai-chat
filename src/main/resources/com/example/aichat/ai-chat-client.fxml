<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aichat.controller.AIChatController">
    <left>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <HBox prefHeight="26.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <!--  快捷搜索  -->
                        <TextArea prefHeight="46.0" prefWidth="158.0"/>
                        <!--  新建会话  -->
                        <JFXButton text="+"/>
                    </children>
                </HBox>
            </top>
            <!--  会话栏  -->
            <center>
                <JFXListView fx:id="conversationJFXListView" prefHeight="300.0" prefWidth="213.0"
                             BorderPane.alignment="CENTER" onMouseClicked="#handleConversationChange"/>
            </center>
        </BorderPane>
    </left>
    <center>
        <BorderPane BorderPane.alignment="CENTER">
            <center>
                <!--  会话内容  -->
                <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
                    <VBox fx:id="chatBox" spacing="5">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </center>
            <bottom>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <!--  编辑对话  -->
                    <JFXTextArea fx:id="inputField" prefHeight="100.0" prefWidth="230.0" wrapText="true"
                                 HBox.hgrow="ALWAYS"/>
                    <!--  发送按钮  -->
                    <BorderPane prefHeight="100.0" prefWidth="66.0">
                        <center>
                            <JFXButton fx:id="sendButton" buttonType="RAISED" onAction="#handleSend" prefHeight="29.0"
                                       prefWidth="51.0" style="-fx-font-size:14px;-fx-background-color:WHITE;"
                                       text="发送" BorderPane.alignment="CENTER"/>
                        </center>
                        <bottom>
                            <JFXButton buttonType="RAISED" onAction="#handleFlush" prefHeight="29.0"
                                       prefWidth="51.0" style="-fx-font-size:14px;-fx-background-color:WHITE;"
                                       text="接收消息" BorderPane.alignment="CENTER"/>
                        </bottom>
                    </BorderPane>
                </HBox>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>
