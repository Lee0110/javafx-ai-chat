<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXScrollPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aichat.controller.AIChatController">
    <left>
        <BorderPane prefHeight="600.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <!--  快捷搜索  -->
                        <JFXTextArea prefHeight="40.0" prefWidth="160.0"/>
                        <!--  新建会话  -->
                        <JFXButton text="+" prefHeight="40.0" prefWidth="40.0"/>
                    </children>
                </HBox>
            </top>
            <!--  会话栏  -->
            <center>
                <JFXListView fx:id="conversationJFXListView" prefHeight="560.0" prefWidth="200" BorderPane.alignment="CENTER" onMouseClicked="#handleSelectConversation"/>
            </center>
        </BorderPane>
    </left>
    <center>
        <BorderPane BorderPane.alignment="CENTER">
            <center>
                <!--  会话内容  -->
                <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
                </ScrollPane>
            </center>
            <bottom>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <!--  编辑对话  -->
                    <JFXTextArea fx:id="inputField" prefHeight="100.0" prefWidth="230.0" wrapText="true"
                                 HBox.hgrow="ALWAYS"/>
                    <!--  发送按钮  -->
                    <BorderPane prefHeight="100.0" prefWidth="66.0">
                        <center>
                            <JFXButton fx:id="sendButton" buttonType="RAISED" onAction="#handleSend" prefHeight="29.0"
                                       prefWidth="51.0" style="-fx-font-size:14px;-fx-background-color:WHITE;"
                                       text="发送" BorderPane.alignment="CENTER"/>
                        </center>
                    </BorderPane>
                </HBox>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>
