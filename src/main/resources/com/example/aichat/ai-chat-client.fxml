<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="734.0" prefWidth="758.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <!-- 顶部区域可以放清除聊天记录按钮 -->
    <top>
        <Button onAction="#handleClearChat" prefWidth="186.0" text="清除聊天记录" />
    </top>

    <!-- 中间区域放聊天记录 -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true">
            <VBox fx:id="chatBox" spacing="5">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <!-- 底部区域放输入框和发送按钮 -->
    <bottom>
        <HBox spacing="5">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <TextField fx:id="inputField" prefHeight="91.0" prefWidth="498.0" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleSend" text="发送" />
        </HBox>
    </bottom>
</BorderPane>
