<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.bootstrapfx.scene.layout.Panel?>
<Panel prefHeight="734.0" prefWidth="758.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aichat.controller.AIChatController">
    <!-- 顶部区域 -->
    <top>
        <MenuBar styleClass="navbar navbar-default">
            <Menu text="选项" styleClass="nav-item">
                <MenuItem text="设置" onAction="#handleOpenSettings" styleClass="nav-link"/>
                <MenuItem text="清除聊天记录" onAction="#handleClearChat" styleClass="nav-link"/>
                <MenuItem text="导出聊天记录" onAction="#handleExportChat" styleClass="nav-link"/>
                <MenuItem text="关于" onAction="#handleOpenAbout" styleClass="nav-link"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- 中间区域放聊天记录 -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-image: url('img/background.jpg'); -fx-background-size: cover;">
            <VBox fx:id="chatBox" spacing="5">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <!-- 底部区域放输入框和发送按钮 -->
    <bottom>
        <HBox spacing="5">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <TextArea fx:id="inputField" prefHeight="91.0" prefWidth="498.0" wrapText="true" HBox.hgrow="ALWAYS" styleClass="form-control"/>
            <Button onAction="#handleSend" text="发送" styleClass="btn-primary"/>
        </HBox>
    </bottom>
</Panel>
