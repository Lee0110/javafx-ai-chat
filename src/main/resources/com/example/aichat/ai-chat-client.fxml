<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.aichat.AIChatController">
    <!-- 顶部区域可以放清除聊天记录按钮 -->
    <top>
        <Button text="清除聊天记录" onAction="#handleClearChat"/>
    </top>

    <!-- 中间区域放聊天记录 -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true">
            <VBox fx:id="chatBox" spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <!-- 底部区域放输入框和发送按钮 -->
    <bottom>
        <HBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
            <Button text="发送" onAction="#handleSend"/>
        </HBox>
    </bottom>
</BorderPane>
